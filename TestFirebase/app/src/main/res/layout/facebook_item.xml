<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userImg_facebook"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center_vertical"
                    app:civ_border_width="0dp"
                    app:civ_border_color="#FF000000"/>

                <RelativeLayout
                    android:id="@+id/titleLayout_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/userImg_facebook"
                    android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/userName_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Dasyam Vinay Bhaskar"/>
                    <TextView
                        android:id="@+id/feedDate_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userName_facebook"
                        android:layout_marginLeft="10dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:text="Nov 10, 10:20PM"/>
                </RelativeLayout>


            </LinearLayout>


                <ImageView
                    android:id="@+id/picture_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/user_messag_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:text="Sample Text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/makeLike_facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:src="@drawable/like_active"/>

                <TextView
                    android:id="@+id/likes_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="25"/>

                <ImageView
                    android:id="@+id/makeComment_facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:src="@drawable/comment"/>

                <TextView
                    android:id="@+id/comments_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="25"/>
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>